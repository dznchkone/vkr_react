{
  "name": "vkr_spa",
  "version": "1.0.0",
  "description": "SPA",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production concurrently \"npm run client:install\" \"npm run client:build\" \"node app.js\"",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "spa",
    "mern"
  ],
  "author": "Igor Vavilin <igorvv.vn@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.0.5",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.1",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "express-validator": "^6.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.15"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
